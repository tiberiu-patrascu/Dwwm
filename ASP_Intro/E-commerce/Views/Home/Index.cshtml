@if (HttpContext.Current.User.Identity.IsAuthenticated)
{
<div class="ajouterCarte menu" >
    <ul>
        <li><a href="/home/create">Ajouter une nouvelle carte</a></li>
    </ul>
</div>

}

@{
    List<E_commerce.Models.Card> cards = (List<E_commerce.Models.Card>)ViewData["cards"];


    foreach (E_commerce.Models.Card item in cards)
    {
        <div class="mycard">
            <article class="articleMiddleFront">
                <img src="~/Content/img/@(item.Id).png" class="carteIcon"/>
                <div>
                    <ul class="states" style="list-style:none;">
                        <li class="power">@item.Power</li>
                        <li class="attack">@item.Attack</li>
                        <li class="armor">@item.Armor</li>
                    </ul>
                </div>
                <h2 class="boutiqueIndex">@item.Name</h2>
            </article>
            <article class="articleMiddleBack">
                <h2 class="boutiqueIndex">@item.Name</h2>
                <p>
                    Power : @item.Power<br />
                    Attack : @item.Attack<br />
                    Armor : @item.Armor<br />
                </p>
                <ul class="btncard">
                    @*<a href="/home/details/@item.Id">Détails</a>*@
                    <li> @Html.ActionLink("Details", "Details", new { id = item.Id }@*new { @class = "details" }*@)</li>
                    <li>@Html.ActionLink("Edit", "Edit", new { id = item.Id })</li>
                    <li> @Html.ActionLink("Delete", "Delete", new { id = item.Id })</li>
                </ul>
                <a href="#" class="buy"><span class="cart"> Add to cart</span><i class="fas fa-shopping-cart"></i></a>
            </article>

        </div>

    }
}
